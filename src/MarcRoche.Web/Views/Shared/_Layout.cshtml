<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css/styles")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body data-ng-app="marcroche-blog">
    <!--[if lt IE 7]>
    <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
    <![endif]-->

    <div class="wrapper">
        <header>
            <div class="container">
                <div class="left">
                    <a href="~/">
                        <img id="logo" src="~/Images/logo5.png" alt="MarcRoche.com" />
                    </a>
                    <span class="tagline"><em>Musings on Software Development</em></span>
                </div>
                <nav class="right clearfix">
                    <div class="mobile-nav">
                        <a href="javascript:;" id="menubutton">
                            <img src="/images/mobile-nav-button.png" />
                        </a>
                    </div>
                    <ul class="list-style text-color">
                        <li id="home-tab" @Url.IsRoute("/blog")><a href="~/">Home</a></li>
                        <li id="about-tab" @Url.IsRoute("/about")><a href="@Url.Action("Index", "about")">About</a></li>
                        <li id="archive-tab" @Url.IsRoute("/archive")><a href="@Url.Action("Index", "archive")">Archive</a></li>
                        <li id="projects-tab" @Url.IsRoute("/projects")><a href="@Url.Action("Index", "projects")">Projects</a></li>
                    </ul>
                </nav>
            </div>
        </header>
        <section id="subheader">
            <div style="height:3px"></div>
            <div id="nav2">
                <div class="pointer padding-10"><a class="white-link-nodec" href="~/">home</a></div>
                <div class="pointer padding-10"><a class="white-link-nodec" href="@Url.Action("Index", "about")">about</a></div>
                <div class="pointer padding-10"><a class="white-link-nodec" href="@Url.Action("Index", "archive")">archive</a></div>
                <div class="pointer padding-10"><a class="white-link-nodec" href="@Url.Action("Index", "projects")">projects</a></div>
            </div>
        </section>
        <article class="container">
            @RenderBody()
        </article>
        <footer>
            <div class="container">
                <div class="footer-menu">
                    <div class="left footer-menu-links"><a class="white-link" href="~/">home</a></div>
                    <div class="left footer-menu-links"><a class="white-link" href="@Url.Action("Index", "about")">about</a></div>
                    <div class="left footer-menu-links"><a class="white-link" href="@Url.Action("Index", "archive")">archive</a></div>
                    <div class="left footer-menu-links"><a class="white-link" href="@Url.Action("Index", "projects")">projects</a></div>
                    <div class="moder"></div>
                    <div class="right footer-menu-icons">
                        <a title="LinkedIn" target="_blank" href="http://www.linkedin.com/pub/marc-roche/3/453/333">
                            <img src="/images/in.png" alt="LinkedIn" />
                        </a>
                    </div>
                    <div class="right footer-menu-icons">
                        <a title="Github" target="_blank" href="https://github.com/marcroche">
                            <img src="/images/github.png" alt="Github" />
                        </a>
                    </div>
                    <div class="right footer-menu-icons">
                        <a title="Twitter" target="_blank" href="https://twitter.com/0xFF0000">
                            <img src="/images/twitter.png" alt="Twitter" />
                        </a>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/vendor")
    @Scripts.Render("~/bundles/effects")

    @Scripts.Render("~/bundles/angular")
    <script src="/Js/app.js" type="text/javascript"></script>
    <script src="/Js/comments/commentsController.js" type="text/javascript"></script>
    <script src="/Js/comments/commentsDirective.js" type="text/javascript"></script>
    <script src="/Js/comments/Comment.js" type="text/javascript"></script>

    @RenderSection("scripts", required: false)

    @if (@Model is MarcRoche.Model.Blog.BlogPost)
    {
        @Scripts.Render(@Model.ScriptDependencies.ToArray())
    }

    @*<script src="/Js/model/BlogComment.js" type="text/javascript"></script>
        <script src="/Js/submitComment.js" type="text/javascript"></script>*@

    @*<script data-main="/Js/main" src="/Scripts/require.js" type="text/javascript"></script>*@
    @*<script src="/Js/app.js" type="text/javascript"></script>
        <script src="/Js/blogDirectives.js" type="text/javascript"></script>*@
</body>
</html>
